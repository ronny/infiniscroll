{
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": [
    // https://github.com/microsoft/vscode/pull/92681
    // because we want prettier to "win" on any formatting, so it needs to be last
    "source.organizeImports",
    "source.fixAll.eslint",
  ],
  "eslint.format.enable": true,
  "eslint.validate": [
    "typescript",
    "javascript",
    "json",
  ],
}
